    </style>
    <style name="TextNeedSpeedLarge">
        <item name="android:layout_width">@dimen/NeedSpeedEditWidthLarge</item>
        <item name="android:layout_height">@dimen/NeedSpeedButtonSizeLarge</item>
        <item name="android:textSize">@dimen/NeedSpeedButtonsTextSizeLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/need_speed_edit_oval</item>

        <item name="android:layout_marginTop">@dimen/MarginTopLarge</item>
        <item name="android:layout_marginLeft">@dimen/MarginLeftLarge</item>
        <item name="android:layout_marginRight">@dimen/MarginRightLarge</item>
        <item name="android:layout_marginBottom">@dimen/MarginBottomLarge</item>
    </style>
    <style name="HeaderNeedSpeedLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/NeedSpeedHeaderTextColor</item>

        <item name="android:layout_marginTop">@dimen/MarginTopLarge</item>
        <item name="android:layout_marginLeft">@dimen/MarginLeftLarge</item>
        <item name="android:layout_marginRight">@dimen/MarginRightLarge</item>
    </style>

    <!-- End Need Speed Styles Small -->
</resources>
