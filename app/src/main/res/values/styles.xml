<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

<!--    <item name="android:gravity">center_horizontal</item>
    <item name="android:drawablePadding">2dp</item>-->
    <style name="HeaderStyleNormal">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">@string/speedTester</item>

        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/HeaderTextColor</item>
        <item name="android:background">@color/HeaderBackgroundColor</item>
    </style>
    <style name="HeaderStyleLarge">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">50sp</item>
        <item name="android:text">@string/speedTester</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/HeaderTextColor</item>
        <item name="android:background">@color/HeaderBackgroundColor</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="HeaderStyleSmall">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:text">@string/speedTester</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/HeaderTextColor</item>
        <item name="android:background">@color/HeaderBackgroundColor</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!--Step -->
    <style name="StepStyleNormal">
        <item name="android:layout_width">@dimen/stepImageWidthNormal</item>
        <item name="android:layout_height">@dimen/stepImageHeightNormal</item>
        <item name="android:layout_marginTop">@dimen/stepImageMarginTopNormal</item>
        <item name="android:layout_marginLeft">@dimen/stepImageMarginLeftNormal</item>
        <item name="android:layout_marginRight">@dimen/stepImageMarginRightNormal</item>

    </style>
    <style name="StepStyleLarge">
        <item name="android:layout_width">@dimen/stepImageWidthLarge</item>
        <item name="android:layout_height">@dimen/stepImageHeightLarge</item>
        <item name="android:layout_marginTop">@dimen/stepImageMarginTopLarge</item>
        <item name="android:layout_marginLeft">@dimen/stepImageMarginLeftLarge</item>
        <item name="android:layout_marginRight">@dimen/stepImageMarginRightLarge</item>

    </style>
    <style name="StepStyleSmall">
        <item name="android:layout_width">@dimen/stepImageWidthSmall</item>
        <item name="android:layout_height">@dimen/stepImageHeightSmall</item>
        <item name="android:layout_marginTop">@dimen/stepImageMarginTopSmall</item>
        <item name="android:layout_marginLeft">@dimen/stepImageMarginLeftSmall</item>
        <item name="android:layout_marginRight">@dimen/stepImageMarginRightSmall</item>

    </style>
    <!--End Step -->

    <style name="NavigateButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/navigate_buttons_enabled</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/NavigationButtonTextColor</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">@dimen/InDataMarginLeftRightNormal</item>
        <item name="android:layout_marginRight">@dimen/InDataMarginLeftRightNormal</item>

    </style>

    <style name="NavigateButtonStyleLarge">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">@drawable/navigate_buttons_enabled</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/NavigationButtonTextColor</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>

    </style>
    <style name="NavigateButtonStyleSmall">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/navigate_buttons_enabled</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/NavigationButtonTextColor</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>

    </style>


    <!-- Need Speed Styles Normal -->
    <style name="ButtonsNeedSpeedNormal">
        <item name="android:layout_width">@dimen/NeedSpeedButtonSizeNormal</item>
        <item name="android:layout_height">@dimen/NeedSpeedButtonSizeNormal</item>
        <item name="android:textSize">@dimen/NeedSpeedButtonsTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/NeedSpeedButtonsTextColor</item>
        <item name="android:background">@drawable/need_speed_buttons_oval</item>
        <item name="android:layout_marginTop">@dimen/MarginTop</item>
        <item name="android:layout_marginLeft">@dimen/MarginLeft</item>
        <item name="android:layout_marginRight">@dimen/MarginRight</item>
        <item name="android:layout_marginBottom">@dimen/MarginBottom</item>
    </style>

    <style name="TextNeedSpeedNormal">
        <item name="android:layout_width">@dimen/NeedSpeedEditWidthNormal</item>
        <item name="android:layout_height">@dimen/NeedSpeedButtonSizeNormal</item>
        <item name="android:textSize">@dimen/NeedSpeedButtonsTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/need_speed_edit_oval</item>

        <item name="android:layout_marginTop">@dimen/MarginTop</item>
        <item name="android:layout_marginLeft">@dimen/MarginLeft</item>
        <item name="android:layout_marginRight">@dimen/MarginRight</item>
        <item name="android:layout_marginBottom">@dimen/MarginBottom</item>
    </style>

    <style name="HeaderNeedSpeedNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/NeedSpeedHeaderTextColor</item>

        <item name="android:layout_marginTop">@dimen/MarginTop</item>
        <item name="android:layout_marginLeft">@dimen/MarginLeft</item>
        <item name="android:layout_marginRight">@dimen/MarginRight</item>
    </style>

    <!-- End Need Speed Styles Normal -->

    <!-- Need Speed Styles Small -->
    <style name="ButtonsNeedSpeedSmall">
        <item name="android:layout_width">@dimen/NeedSpeedButtonSizeSmall</item>
        <item name="android:layout_height">@dimen/NeedSpeedButtonSizeSmall</item>
