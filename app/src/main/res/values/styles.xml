        <item name="android:layout_marginRight">@dimen/MarginRightSmall</item>
        <item name="android:layout_marginBottom">@dimen/MarginBottomSmall</item>
    </style>
    <style name="HeaderNeedSpeedSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/NeedSpeedHeaderTextColor</item>

        <item name="android:layout_marginTop">@dimen/MarginTop</item>
        <item name="android:layout_marginLeft">@dimen/MarginLeft</item>
        <item name="android:layout_marginRight">@dimen/MarginRight</item>
    </style>

    <!-- End Need Speed Styles Small -->

    <!-- Need Speed Styles Large -->
    <style name="ButtonsNeedSpeedLarge">
        <item name="android:layout_width">@dimen/NeedSpeedButtonSizeLarge</item>
        <item name="android:layout_height">@dimen/NeedSpeedButtonSizeLarge</item>
        <item name="android:textSize">@dimen/NeedSpeedButtonsTextSizeLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/NeedSpeedButtonsTextColor</item>
